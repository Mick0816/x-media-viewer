{
    "manifest_version": 3,
    "name": "X メディアポストビューア",
    "version": "1.0.0",
    "description": "X(Twitter)のメディア投稿を古い順に快適に読むためのツール",
    "permissions": [
      "storage",
      "activeTab"
    ],
    "host_permissions": [
      "https://x.com/*",
      "https://twitter.com/*"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
      }
    },
    "content_scripts": [
      {
        "matches": [
          "https://x.com/*",
          "https://twitter.com/*"
        ],
        "js": ["content.js"]
      }
    ],
    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }